<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.shape.Circle?>
<?import javafx.scene.text.Font?>

<BorderPane fx:id="mainBorderPane" prefHeight="650.0" prefWidth="950.0" stylesheets="@style.css" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.group4.sportsclub.Suzane.MainLayoutController">

    <top>
        <HBox alignment="CENTER_LEFT" prefHeight="70.0" spacing="20.0" styleClass="top-bar" BorderPane.alignment="CENTER">
            <children>
                <Label text="BROTHER'S UNION" textFill="#2c3e50">
                    <font>
                        <Font name="Impact" size="24.0" />
                    </font>
                    <HBox.margin>
                        <Insets left="20.0" />
                    </HBox.margin>
                </Label>
                <Label fx:id="headerTitle" text="|  Dashboard Home" textFill="#7f8c8d">
                    <font>
                        <Font size="18.0" />
                    </font>
                </Label>
                <StackPane HBox.hgrow="ALWAYS" />

                <Button mnemonicParsing="false" onAction="#handleLogout" styleClass="logout-button" text="Logout">
                    <HBox.margin>
                        <Insets right="20.0" />
                    </HBox.margin>
                    <font>
                        <Font name="System Bold" size="12.0" />
                    </font>
                </Button>
            </children>
        </HBox>
    </top>

    <left>
        <VBox prefWidth="260.0" spacing="10.0" styleClass="sidebar" BorderPane.alignment="CENTER">
            <children>
                <VBox alignment="CENTER" spacing="5.0" style="-fx-padding: 30 0 20 0;">
                    <children>
                        <Circle fx:id="profileCircle" fill="WHITE" onMouseClicked="#handleProfileImageChange" pickOnBounds="true" radius="40.0" stroke="#e67e22" strokeType="INSIDE" strokeWidth="3.0" style="-fx-cursor: hand;" />

                        <Label fx:id="userNameLabel" text="Welcome, Guest" textFill="WHITE">
                            <font>
                                <Font name="System Bold" size="16.0" />
                            </font>
                        </Label>

                        <Label fx:id="roleLabel" text="Access Level" textFill="#bdc3c7">
                            <font>
                                <Font size="12.0" />
                            </font>
                        </Label>
                    </children>
                </VBox>

                <Label text="NAVIGATION MENU" textFill="#95a5a6">
                    <font>
                        <Font name="System Bold" size="10.0" />
                    </font>
                    <VBox.margin>
                        <Insets left="20.0" />
                    </VBox.margin>
                </Label>

                <ScrollPane fitToWidth="true" hbarPolicy="NEVER" style="-fx-background: transparent; -fx-background-color: transparent;" vbarPolicy="AS_NEEDED">
                    <content>
                        <VBox fx:id="sideMenuBox" spacing="2.0" style="-fx-background-color: transparent;" />
                    </content>
                </ScrollPane>
            </children>
        </VBox>
    </left>

    <center>
        <StackPane fx:id="contentArea" style="-fx-background-color: #f4f6f7;" BorderPane.alignment="CENTER">
            <children>
                <VBox alignment="CENTER" spacing="20.0">
                    <children>
                        <Label text="Ready to work?" textFill="#bdc3c7">
                            <font>
                                <Font name="System Bold" size="36.0" />
                            </font>
                        </Label>
                        <Label text="Select an option from the left menu to begin." textFill="#95a5a6">
                            <font>
                                <Font size="16.0" />
                            </font>
                        </Label>
                    </children>
                </VBox>
            </children>
        </StackPane>
    </center>

</BorderPane>