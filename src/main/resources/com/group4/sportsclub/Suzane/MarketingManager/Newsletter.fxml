<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="600.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.group4.sportsclub.Suzane.MarketingManager.NewsletterController">
    <children>
        <VBox spacing="15.0" AnchorPane.bottomAnchor="30.0" AnchorPane.leftAnchor="30.0" AnchorPane.rightAnchor="30.0" AnchorPane.topAnchor="30.0">
            <children>
                <Label text="Compose Monthly Newsletter" textFill="#2c3e50">
                    <font>
                        <Font name="System Bold" size="22.0" />
                    </font>
                </Label>

                <HBox spacing="15.0">
                    <children>
                        <VBox HBox.hgrow="ALWAYS" spacing="5.0">
                            <Label text="Subject Line:" />
                            <TextField fx:id="subjectField" promptText="e.g. November Updates: Big Win against Rivals!" />
                        </VBox>
                        <VBox prefWidth="250.0" spacing="5.0">
                            <Label text="Distribution List:" />
                            <ComboBox fx:id="distCombo" maxWidth="Infinity" />
                        </VBox>
                    </children>
                </HBox>

                <Label text="Content:" />
                <TextArea fx:id="contentArea" prefHeight="300.0" wrapText="true" style="-fx-font-family: 'Monospaced';" promptText="Type your newsletter content here using markdown or plain text..." />

                <HBox spacing="15.0" alignment="CENTER_RIGHT">
                    <Button onAction="#handlePreview" text="Preview Layout" style="-fx-base: #ecf0f1;" />
                    <Button onAction="#handleSend" text="Schedule &amp; Send" style="-fx-background-color: #27ae60; -fx-text-fill: white; -fx-font-weight: bold; -fx-padding: 10 20;" />
                </HBox>
            </children>
        </VBox>
    </children>
</AnchorPane>