<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="600.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.group4.sportsclub.Suzane.MarketingManager.SeasonTicketRenewalController">
    <children>
        <VBox spacing="20.0" AnchorPane.bottomAnchor="20.0" AnchorPane.leftAnchor="20.0" AnchorPane.rightAnchor="20.0" AnchorPane.topAnchor="20.0">
            <children>
                <Label text="Season Ticket Renewal Campaign" textFill="#2c3e50">
                    <font>
                        <Font name="System Bold" size="20.0" />
                    </font>
                </Label>

                <HBox spacing="20.0" style="-fx-background-color: #ecf0f1; -fx-padding: 20; -fx-background-radius: 5;">
                    <children>
                        <VBox spacing="10.0" HBox.hgrow="ALWAYS">
                            <Label text="Target Audience:" />
                            <ComboBox fx:id="segmentCombo" maxWidth="Infinity" />

                            <Label text="Email Template Body:" />
                            <TextArea fx:id="emailBody" prefHeight="100.0" promptText="Dear Member, Renew your ticket now for an Early Bird discount..." />

                            <Button onAction="#handleSend" prefHeight="40.0" style="-fx-background-color: #e67e22; -fx-text-fill: white;" text="Launch Renewal Campaign" />
                        </VBox>
                    </children>
                </HBox>

                <Label text="Campaign History &amp; Analytics" textFill="#7f8c8d">
                    <font>
                        <Font name="System Bold" size="14.0" />
                    </font>
                </Label>

                <TableView fx:id="historyTable" VBox.vgrow="ALWAYS">
                    <columns>
                        <TableColumn fx:id="colDate" prefWidth="120.0" text="Date Sent" />
                        <TableColumn fx:id="colSegment" prefWidth="200.0" text="Audience Segment" />
                        <TableColumn fx:id="colSent" prefWidth="100.0" text="Emails Sent" />
                        <TableColumn fx:id="colOpenRate" prefWidth="100.0" text="Open Rate" />
                        <TableColumn fx:id="colStatus" prefWidth="150.0" text="Status" />
                    </columns>
                    <columnResizePolicy>
                        <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                    </columnResizePolicy>
                </TableView>
            </children>
        </VBox>
    </children>
</AnchorPane>