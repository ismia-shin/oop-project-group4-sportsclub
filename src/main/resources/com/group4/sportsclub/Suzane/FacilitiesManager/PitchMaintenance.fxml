<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.SplitPane?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="600.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.group4.sportsclub.Suzane.FacilitiesManager.PitchMaintenanceController">
    <children>
        <SplitPane dividerPositions="0.4" layoutX="14.0" layoutY="14.0" prefHeight="600.0" prefWidth="800.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
            <items>
                <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="160.0" prefWidth="100.0">
                    <children>
                        <VBox layoutX="14.0" layoutY="14.0" spacing="10.0" AnchorPane.bottomAnchor="14.0" AnchorPane.leftAnchor="14.0" AnchorPane.rightAnchor="14.0" AnchorPane.topAnchor="14.0">
                            <children>
                                <Label text="Scheduled Tasks" textFill="#27ae60">
                                    <font>
                                        <Font name="System Bold" size="14.0" />
                                    </font>
                                </Label>
                                <ListView fx:id="taskListView" prefHeight="200.0" prefWidth="200.0" VBox.vgrow="ALWAYS" />
                                <Button maxWidth="Infinity" onAction="#handleMarkComplete" text="Mark Selected as Complete" />
                            </children>
                        </VBox>
                    </children>
                </AnchorPane>

                <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="160.0" prefWidth="100.0" style="-fx-background-color: #f4f4f4;">
                    <children>
                        <VBox layoutX="20.0" layoutY="20.0" spacing="15.0" AnchorPane.leftAnchor="20.0" AnchorPane.rightAnchor="20.0" AnchorPane.topAnchor="20.0">
                            <children>
                                <Label text="Assign New Maintenance Task" textFill="#2c3e50">
                                    <font>
                                        <Font name="System Bold" size="18.0" />
                                    </font>
                                </Label>
                                <Label text="Task Title:" />
                                <TextField fx:id="taskTitleField" promptText="e.g. Grass Cutting" />

                                <Label text="Assigned Crew/Team:" />
                                <TextField fx:id="crewField" promptText="e.g. Team Alpha" />

                                <Label text="Date:" />
                                <DatePicker fx:id="taskDatePicker" maxWidth="Infinity" />

                                <Label text="Special Instructions:" />
                                <TextArea fx:id="instructionArea" prefHeight="100.0" />

                                <Button maxWidth="Infinity" onAction="#handleAssignTask" prefHeight="40.0" style="-fx-background-color: #27ae60; -fx-text-fill: white;" text="Assign &amp; Schedule">
                                    <font>
                                        <Font name="System Bold" size="12.0" />
                                    </font>
                                </Button>
                            </children>
                        </VBox>
                    </children>
                </AnchorPane>
            </items>
        </SplitPane>
    </children>
</AnchorPane>