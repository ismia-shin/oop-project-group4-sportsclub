<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="600.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.group4.sportsclub.Suzane.FacilitiesManager.ComplianceController">
    <children>
        <VBox spacing="15.0" AnchorPane.bottomAnchor="20.0" AnchorPane.leftAnchor="20.0" AnchorPane.rightAnchor="20.0" AnchorPane.topAnchor="20.0">
            <children>
                <Label text="Compliance &amp; Safety Certificates" textFill="#e67e22">
                    <font>
                        <Font name="System Bold" size="18.0" />
                    </font>
                </Label>

                <TableView fx:id="certTable" VBox.vgrow="ALWAYS">
                    <columns>
                        <TableColumn fx:id="colCertName" prefWidth="250.0" text="Certificate Name" />
                        <TableColumn fx:id="colIssueDate" prefWidth="150.0" text="Issue Date" />
                        <TableColumn fx:id="colExpiryDate" prefWidth="150.0" text="Expiry Date" />
                        <TableColumn fx:id="colStatus" prefWidth="150.0" text="Status" />
                    </columns>
                    <columnResizePolicy>
                        <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                    </columnResizePolicy>
                </TableView>

                <HBox spacing="10.0" alignment="CENTER_LEFT" style="-fx-border-color: #ddd; -fx-padding: 10;">
                    <Label text="Renew/Update:" style="-fx-font-weight: bold;"/>
                    <TextField fx:id="certNameField" promptText="Certificate Name"/>
                    <DatePicker fx:id="newExpiryPicker" promptText="New Expiry Date"/>
                    <Button onAction="#handleUpdateCert" text="Upload New Certificate" style="-fx-background-color: #2980b9; -fx-text-fill: white;"/>
                </HBox>
            </children>
        </VBox>
    </children>
</AnchorPane>