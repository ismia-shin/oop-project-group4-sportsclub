<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="600.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.group4.sportsclub.Suzane.FacilitiesManager.SecurityStaffingController">
    <children>
        <VBox spacing="20.0" AnchorPane.bottomAnchor="20.0" AnchorPane.leftAnchor="20.0" AnchorPane.rightAnchor="20.0" AnchorPane.topAnchor="20.0">
            <children>
                <HBox spacing="15.0" style="-fx-background-color: #ecf0f1; -fx-padding: 20; -fx-background-radius: 5;">
                    <children>
                        <VBox spacing="5.0">
                            <Label text="Zone:" />
                            <ComboBox fx:id="zoneCombo" prefWidth="150.0" />
                        </VBox>
                        <VBox spacing="5.0">
                            <Label text="Required Staff:" />
                            <TextField fx:id="staffCountField" prefWidth="100.0" />
                        </VBox>
                        <VBox spacing="5.0">
                            <Label text="Shift Time:" />
                            <ComboBox fx:id="shiftCombo" prefWidth="150.0" />
                        </VBox>
                        <Button onAction="#handleAssign" prefHeight="45.0" style="-fx-background-color: #2c3e50; -fx-text-fill: white;" text="Assign to Roster" />
                    </children>
                </HBox>

                <Label text="Current Match Day Security Roster">
                    <font>
                        <Font name="System Bold" size="16.0" />
                    </font>
                </Label>

                <TableView fx:id="rosterTable" VBox.vgrow="ALWAYS">
                    <columns>
                        <TableColumn fx:id="colZone" prefWidth="150.0" text="Zone" />
                        <TableColumn fx:id="colCount" prefWidth="100.0" text="Staff Count" />
                        <TableColumn fx:id="colShift" prefWidth="150.0" text="Shift" />
                        <TableColumn fx:id="colStatus" prefWidth="150.0" text="Confirmation Status" />
                    </columns>
                    <columnResizePolicy>
                        <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                    </columnResizePolicy>
                </TableView>
            </children>
        </VBox>
    </children>
</AnchorPane>