<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane prefHeight="470.0" prefWidth="650.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.group4.sportsclub.Abid.MembershipHolder.BookFacilityorTrainingSessionController">

    <!-- Page Title -->
    <Label layoutX="167.0" layoutY="14.0" style="-fx-font-size: 20px; -fx-font-weight: bold; -fx-text-fill: #2A4D8F;" text=" Book Facility or Training Session" />

    <!-- Booking Preferences -->
    <Label layoutX="20" layoutY="70" text="Sport Type:" />
    <ComboBox fx:id="cmbSportType" layoutX="120" layoutY="65" prefWidth="200" promptText="Select Sport" />

    <Label layoutX="350" layoutY="70" text="Facility:" />
    <ComboBox fx:id="cmbFacility" layoutX="430" layoutY="65" prefWidth="180" promptText="Choose Facility" />

    <Label layoutX="20" layoutY="115" text="Date:" />
    <DatePicker fx:id="datePicker" layoutX="120" layoutY="110" prefWidth="200" />

    <Label layoutX="350" layoutY="115" text="Time:" />
    <TextField fx:id="txtTime" layoutX="430" layoutY="110" prefWidth="180" promptText="HH:MM" />

    <Label layoutX="20" layoutY="160" text="Duration (hrs):" />
    <TextField fx:id="txtDuration" layoutX="120" layoutY="155" prefWidth="200" promptText="e.g., 1.5" />

    <!-- Booking Summary Table -->
    <TableView fx:id="tblBookingSummary" layoutX="20" layoutY="200" prefHeight="150" prefWidth="610">

        <columns>
            <TableColumn fx:id="colSport" prefWidth="120" text="Sport" />
            <TableColumn fx:id="colFacility" prefWidth="150" text="Facility" />
            <TableColumn fx:id="colDate" prefWidth="120" text="Date" />
            <TableColumn fx:id="colTime" prefWidth="100" text="Time" />
            <TableColumn fx:id="colDuration" prefWidth="100" text="Duration" />
        </columns>

    </TableView>

    <!-- Buttons -->
    <Button layoutX="20" layoutY="370" onAction="#handleCheckAvailability" prefWidth="160" text="Check Availability" />

    <Button layoutX="200" layoutY="370" onAction="#handleConfirmBooking" prefWidth="160" text="Confirm Booking" />

    <Button layoutX="380" layoutY="370" onAction="#handleClearFields" prefWidth="120" text="Clear Fields" />

    <Button layoutX="520" layoutY="370" onAction="#handleRefreshTable" prefWidth="110" text="Refresh Table" />

</AnchorPane>
