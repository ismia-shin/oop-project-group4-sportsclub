<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ChoiceBox?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane prefHeight="450.0" prefWidth="650.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.group4.sportsclub.Abid.MembershipHolder.ViewPersonalPerformanceActivityReports">

    <children>

        <!-- Goal Title -->
        <Label layoutX="112.0" layoutY="20.0" style="-fx-font-size: 20px; -fx-font-weight: bold;" text=" View Personal Performance &amp; Activity Reports" />

        <!-- Table for Activity Records -->
        <TableView fx:id="activityTable" layoutX="20" layoutY="70" prefHeight="180" prefWidth="610">

            <columns>
                <TableColumn fx:id="colSession" prefWidth="150" text="Session" />
                <TableColumn fx:id="colRating" prefWidth="100" text="Rating" />
                <TableColumn fx:id="colComments" prefWidth="200" text="Trainer Comments" />
                <TableColumn fx:id="colDate" prefWidth="150" text="Date" />
            </columns>

        </TableView>

        <!-- Data Filter Section -->
        <Label layoutX="20" layoutY="270" text="Filter By:" />

        <ChoiceBox fx:id="filterChoice" layoutX="90" layoutY="265" prefWidth="150" />

        <DatePicker fx:id="filterDate" layoutX="260" layoutY="265" prefWidth="150" />

        <Button layoutX="430" layoutY="265" onAction="#onApplyFilter" text="Apply Filter" />

        <!-- Progress Notes -->
        <Label layoutX="20" layoutY="310" text="Progress Summary:" />

        <TextArea fx:id="progressArea" layoutX="20" layoutY="330" prefHeight="80" prefWidth="400" promptText="Summary, achievements, and performance notes" />

        <!-- Export Buttons -->
        <Button layoutX="450.0" layoutY="330.0" onAction="#onExportPDF" prefWidth="150" text="Export as PDF" />

        <Button layoutX="450.0" layoutY="384.0" onAction="#onExportExcel" prefWidth="150" text="Export as Excel" />

    </children>

</AnchorPane>
