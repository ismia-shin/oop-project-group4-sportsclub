<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane prefHeight="489.0" prefWidth="650.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.group4.sportsclub.Abid.MembershipHolder.CancelorModifyExistingBookingsController">

    <children>

        <!-- Goal Title -->
        <Label layoutX="171.0" layoutY="20.0" style="-fx-font-size: 20px; -fx-font-weight: bold;" text=" Cancel or Modify Existing Bookings" />

        <!-- Booking History Table -->
        <TableView fx:id="bookingTable" layoutX="20" layoutY="70" prefHeight="180" prefWidth="610">

            <columns>
                <TableColumn fx:id="colFacility" prefWidth="150" text="Facility" />
                <TableColumn fx:id="colDate" prefWidth="120" text="Date" />
                <TableColumn fx:id="colTime" prefWidth="120" text="Time" />
                <TableColumn fx:id="colStatus" prefWidth="120" text="Status" />
            </columns>

        </TableView>

        <!-- Selection Section -->
        <Label layoutX="20" layoutY="270" text="Select Booking:" />
        <ComboBox fx:id="bookingSelectCombo" layoutX="130" layoutY="265" prefWidth="200" promptText="Choose booking" />

        <!-- Modify Section -->
        <Label layoutX="350" layoutY="270" text="New Date:" />
        <DatePicker fx:id="newDatePicker" layoutX="420" layoutY="265" prefWidth="150" />

        <Label layoutX="350" layoutY="305" text="New Time:" />
        <TextField fx:id="newTimeField" layoutX="420" layoutY="300" prefWidth="150" promptText="HH:MM" />

        <Button layoutX="420.0" layoutY="340.0" onAction="#onModifyBooking" prefWidth="150" text="Modify Booking" />

        <!-- Cancel Button -->
        <Button layoutX="130.0" layoutY="327.0" onAction="#onCancelBooking" prefWidth="150" text="Cancel Booking" />

        <!-- Status Message -->
        <TextArea fx:id="statusArea" editable="false" layoutX="20.0" layoutY="385.0" prefHeight="70" prefWidth="610" promptText="Status, policy check, and confirmation messages will appear here" />

    </children>

</AnchorPane>
