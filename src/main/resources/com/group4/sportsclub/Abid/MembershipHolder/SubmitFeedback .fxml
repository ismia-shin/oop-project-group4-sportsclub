<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.RadioButton?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane prefHeight="450.0" prefWidth="650.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.group4.sportsclub.Abid.MembershipHolder.SubmitFeedbackController">

    <!-- Goal Title -->
    <Label layoutX="300.0" layoutY="14.0" style="-fx-font-size: 20px; -fx-font-weight: bold; -fx-text-fill: #2A4D8F;" text="Submit Feedback" />

    <!-- Category -->
    <Label layoutX="20" layoutY="65" text="Category:" />
    <ComboBox fx:id="cmbCategory" layoutX="100" layoutY="60" prefWidth="200" promptText="Select Category" />

    <!-- Feedback Title -->
    <Label layoutX="20" layoutY="110" text="Title:" />
    <TextField fx:id="txtTitle" layoutX="100" layoutY="105" prefWidth="400" promptText="Feedback Title" />

    <!-- Message -->
    <Label layoutX="20" layoutY="155" text="Message:" />
    <TextArea fx:id="txtMessage" layoutX="100" layoutY="150" prefHeight="120" prefWidth="400" promptText="Write your feedback..." />

    <!-- Attachment -->
    <Label layoutX="547.0" layoutY="147.0" text="Attachment:" />
    <RadioButton fx:id="rbAttachYes" layoutX="547.0" layoutY="184.0" text="Yes" />
    <RadioButton fx:id="rbAttachNo" layoutX="547.0" layoutY="216.0" prefHeight="18.0" prefWidth="44.0" text="No" />

    <!-- Submit Button -->
    <Button layoutX="20" layoutY="290" onAction="#handleSubmitFeedback" prefWidth="180" text="Submit Feedback" />

    <!-- Feedback Table -->
    <TableView fx:id="tableFeedback" layoutX="20" layoutY="330" prefHeight="100" prefWidth="610">
        <columns>
            <TableColumn prefWidth="150" text="Category" />
            <TableColumn prefWidth="200" text="Title" />
            <TableColumn prefWidth="120" text="Date" />
            <TableColumn prefWidth="140" text="Ref No" />
        </columns>
    </TableView>

</AnchorPane>
