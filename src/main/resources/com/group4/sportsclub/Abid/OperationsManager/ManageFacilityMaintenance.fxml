<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ChoiceBox?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane prefHeight="450.0" prefWidth="650.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.group4.sportsclub.Abid.OperationsManager.ManageFacilityMaintenanceConroller">

    <!-- Goal Title -->
    <Label layoutX="150.0" layoutY="24.0" prefHeight="26.0" prefWidth="342.0" style="-fx-font-size: 20px; -fx-font-weight: bold;" text="Manage Facility Maintenance Requests" />

    <!-- Issue Table -->
    <TableView fx:id="maintenanceTable" layoutX="20" layoutY="70" prefHeight="180" prefWidth="610">
        <columns>
            <TableColumn fx:id="colIssue" prefWidth="200" text="Issue" />
            <TableColumn fx:id="colFacility" prefWidth="120" text="Facility" />
            <TableColumn fx:id="colReportedBy" prefWidth="120" text="Reported By" />
            <TableColumn fx:id="colStatus" prefWidth="150" text="Status" />
        </columns>
    </TableView>

    <!-- Technician Assignment -->
    <Label layoutX="20" layoutY="270" text="Technician:" />
    <TextField fx:id="technicianField" layoutX="110" layoutY="265" prefWidth="180" />

    <!-- Priority -->
    <Label layoutX="310" layoutY="270" text="Priority:" />
    <ChoiceBox fx:id="priorityChoiceBox" layoutX="370" layoutY="265" prefWidth="120" />

    <!-- Deadline -->
    <Label layoutX="20" layoutY="310" text="Deadline:" />
    <DatePicker fx:id="deadlinePicker" layoutX="110" layoutY="305" prefWidth="180" />

    <!-- Notes -->
    <Label layoutX="310" layoutY="310" text="Notes:" />
    <TextArea fx:id="notesArea" layoutX="360" layoutY="305" prefHeight="60" prefWidth="270" />

    <!-- Buttons -->
    <Button layoutX="110" layoutY="380" onAction="#onAssignTask" text="Assign Task" />

    <Button layoutX="230" layoutY="380" onAction="#onUpdateStatus" text="Update Status" />

    <Button layoutX="350" layoutY="380" onAction="#onNotifyReporter" text="Notify Reporter" />

</AnchorPane>
