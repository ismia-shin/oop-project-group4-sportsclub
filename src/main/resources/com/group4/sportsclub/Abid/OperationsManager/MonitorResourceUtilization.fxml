<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane prefHeight="420.0" prefWidth="620.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.group4.sportsclub.Abid.OperationsManager.MonitorResourceUtilizationController">

    <children>

        <!-- GOAL TITLE -->
        <Label fx:id="goalTitle" layoutX="163.0" layoutY="14.0" style="-fx-font-size: 22px; -fx-font-weight: bold;" text="Monitor Resource Utilization" />

        <!-- Facility Selector -->
        <Label layoutX="20" layoutY="60" text="Facility:" />
        <ComboBox fx:id="facilityComboBox" layoutX="90" layoutY="55" prefWidth="180" promptText="Select Facility" />

        <!-- Fetch Data Button -->
        <Button fx:id="fetchDataButton" layoutX="290" layoutY="55" onAction="#onFetchData" prefWidth="120" text="Fetch Data" />

        <!-- Export Report Button -->
        <Button fx:id="exportReportButton" layoutX="430" layoutY="55" onAction="#onExportReport" prefWidth="150" text="Export Report" />

        <!-- Usage Logs Display -->
        <Label layoutX="20" layoutY="100" text="Usage Logs:" />
        <TextArea fx:id="usageLogsArea" layoutX="20" layoutY="120" prefHeight="110" prefWidth="560" promptText="Booking logs, attendance records, idle hours" />

        <!-- Process Analytics Button -->
        <Button fx:id="processAnalyticsButton" layoutX="20" layoutY="240" onAction="#onProcessAnalytics" prefWidth="180" text="Process Analytics" />

        <!-- Analytics Table -->
        <TableView fx:id="analyticsTable" layoutX="20" layoutY="280" prefHeight="130" prefWidth="580">

            <columns>
                <TableColumn fx:id="colMetric" prefWidth="180" text="Metric" />
                <TableColumn fx:id="colValue" prefWidth="180" text="Value" />
                <TableColumn fx:id="colRemark" prefWidth="180" text="Remark" />
            </columns>

        </TableView>

    </children>

</AnchorPane>
